package whileloops;

import java.util.Random;
import java.util.Scanner;

public class HiLowLimited 
{
	public static void main(String[] args)
	{
		Random r = new Random();
		 Scanner keyboard= new Scanner(System.in);
		int x = 1 + r.nextInt(100),y,tries;
		tries=0;
		
		System.out.println("I am thinking of a number between 1-100. You have seven guesses.");
		y=keyboard.nextInt();
		
		System.out.print("Guess #"+tries);
		while(tries<7)
		{
			if(x>y)
			{
				System.out.println("Sorry, you are too low. I was thinking of "+x);
			}
		
			if(y>x&&tries<7)
			{
				System.out.println("Sorry, you are too high. I was thinking of "+x);
			}
	

			if(tries==7)
			{
				System.out.println("You didn't guess it in seven tries. you lose");
			}
		
		
			if(x==y)
			{
				System.out.println("You guessed it! What are the odds?");
			}
		}
	}	
}
